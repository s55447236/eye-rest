{
    "manifest_version": 3,
    "name": "Eye Rest Cat",
    "version": "1.0",
    "description": "A cute cat reminds you to rest your eyes every hour.",
    "permissions": [
        "alarms",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/cat.png",
            "48": "images/cat.png",
            "128": "images/cat.png"
        }
    },
    "icons": {
        "16": "images/cat.png",
        "48": "images/cat.png",
        "128": "images/cat.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/cat.png",
                "images/cat_peeking.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}